<%= simple_form_for @question, defaults: { input_html: { class: 'form-horizontal' } } do |f| %>

  <div class="field">
    <%= f.label :query, "Question"%><br>
    <%= f.text_field :query %>
  </div>
  <div class="field">
    <%= f.label :explanation, "Explication qui accompagne la solution" %><br>
    <%= f.text_field :explanation %>
  </div>

<h2>Réponses</h2>

  <%= f.simple_fields_for :answers  do |answer_builder| %>
    <p>
      <%= render 'answer_fields', :f => answer_builder %>
      <div class="links">
        <%= link_to_add_association 'Ajouter une réponse', f, :answers %>
      </div>
    </p>
  <% end %>

<h2>Thèmes</h2>

<div class="form-group">
    <%= f.label :theme_list, "Catégories" %><br>
    <%= f.collection_check_boxes :theme_list, @all_themes, :name, :name, html_options = {class: "checkbox"} %>
</div>
<div class="form-group">
    <%= f.label :level_list, "Niveau de difficulté" %><br>
    <%= f.collection_check_boxes :level_list, @all_levels, :name, :name, html_options = {class: "checkbox"} %>
</div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

