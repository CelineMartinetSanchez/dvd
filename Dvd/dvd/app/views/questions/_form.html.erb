<%= simple_form_for @question, defaults: { input_html: { class: 'form-horizontal' } } do |f| %>

  <div class="field">
    <%= f.label :query %><br>
    <%= f.text_field :query %>
  </div>
  <div class="field">
    <%= f.label :explanation %><br>
    <%= f.text_field :explanation %>
  </div>

<h2>Réponses</h2>

  <% f.fields_for :answers do |answer_builder| %>
    <p>
      <%= answer_builder.label :title, "Réponse" %></br>
      <%= answer_builder.text_area :title %>
      <%= answer_builder.check_box :_destroy %>
      <%= answer_builder.label :_destroy, "Supprimer la réponse" %>
    </p>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

