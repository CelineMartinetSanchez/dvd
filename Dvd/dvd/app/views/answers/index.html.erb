<h1>Listing answers</h1>

<table>
  <thead>
    <tr>
      <th>Good answer</th>
      <th>Bad answer</th>
      <th>Bad answer 2</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.good_answer %></td>
        <td><%= answer.bad_answer %></td>
        <td><%= answer.bad_answer_2 %></td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

